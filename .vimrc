set number
set relativenumber
set numberwidth=3
set shiftwidth=4 
set cpoptions+=n
syntax on
filetype on
filetype indent on
set smartindent
autocmd BufRead,BufWritePre *.sh normal gg=G
set autoindent
set softtabstop=4
set expandtab
set tabstop=4
set mouse=a
set termguicolors
set incsearch
set ignorecase
set showmode
set hlsearch
set ruler
set showmatch
set background=dark
set wrap
set encoding=utf8

